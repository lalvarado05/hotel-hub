<% content_for :title, "New Bed" %>
<div class="container my-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Create New Bed</h1>
    <%= link_to "Back to Beds", beds_path, class: "btn btn-secondary" %>
  </div>
  <div class="card shadow-sm" style="width: 400px; margin: 0 auto;">
    <div class="card-body">
      <h3 class="text-center mb-4">Bed details</h3>
      <%= render "form", bed: @bed %>
    </div>
  </div>
</div>