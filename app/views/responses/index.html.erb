<% content_for :title, "Responses" %>
<div class="mt-3 mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Responses</h1>
  </div>
  <div class="table-responsive card shadow-sm p-4" data-controller="tables">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Review</th>
          <th>Comment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @responses.each do |response| %>
          <%= render response %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>