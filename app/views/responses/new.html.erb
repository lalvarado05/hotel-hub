<% content_for :title, "New Response" %>
<div class="mt-3">
  <div class="d-flex justify-content-between align-items-start mb-4">
    <h1 class="mb-0">New Response</h1>
    <div class="d-flex flex-column">
      <%= link_to "Back to responses", responses_path, class: "btn btn-secondary mb-2" %>
      <%= link_to "Back to reviews", reviews_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <div class="card shadow p-4" style="width: 500px;">
      <div class="card-body">
        <%= render "form", response: @response, review: @review %>
      </div>
    </div>
  </div>
</div>