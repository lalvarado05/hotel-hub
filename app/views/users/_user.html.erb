<tr id="<%= dom_id user %>">
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.phone_number %></td>
  <td><%= user.role.capitalize %></td>
  <td><%= user.email %></td>
  <td class="d-flex">
    <%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary btn-sm me-2" %>
    <div>
      <% if user.id != current_user.id %>
        <%= button_to "Delete", user, method: :delete, class: "btn btn-danger btn-sm", data: { turbo_confirm: "Are you sure?" }, form_class: 'd-inline' %>
      <% end %>
    </div>
  </td>
</tr>
