<% content_for :title, "Reviews" %>
<div class="mt-3 mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Reviews</h1>
  </div>
  <div class="table-responsive card shadow-sm p-4" data-controller="tables">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Room</th>
          <th>Rating</th>
          <th>Comment</th>
          <th>Display</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <%= render review %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>