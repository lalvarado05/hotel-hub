<div class="card-body">
  <h3 class="card-title text-center mb-4">Review Details</h3>
  <%= form_with(model: review, local: true, class: "needs-validation") do |form| %>
    <% if review.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading"><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h4>
        <ul>
          <% review.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :user_id, "User", class: "form-label" %>
      <p class="form-control"><%= @review.user.full_name %></p>
    </div>
    <div class="mb-3">
      <%= form.label :rating, "Rating", class: "form-label" %>
      <%= form.number_field :rating, class: "form-control", min: 1, max: 5 %>
    </div>
    <div class="mb-3">
      <%= form.label :comment, "Comment", class: "form-label" %>
      <%= form.text_area :comment, class: "form-control", rows: 5 %>
    </div>
    <div class="form-check mb-4">
      <%= form.check_box :display, class: "form-check-input" %>
      <%= form.label :display, "Display this review", class: "form-check-label" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Save Review", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>