<% content_for :title, "Leave a Review" %>
<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Leave a Review</h1>
    <%= link_to "Back to Reservations", reservations_path, class: "btn btn-secondary" %>
  </div>
  <div class="card shadow-sm p-4 mb-4">
    <%= form_with model: [@reservation, @review], local: true, data: { turbo: false } do |f| %>
      <div class="mb-3">
        <%= f.label :rating, "Rating", class: "form-label" %>
        <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]), class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :comment, "Your Review", class: "form-label" %>
        <%= f.text_area :comment, class: 'form-control', rows: 5 %>
      </div>
      <div>
        <%= f.submit "Submit Review", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
