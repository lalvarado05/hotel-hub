<% content_for :title, "Rooms" %>
<div class="mt-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Rooms</h1>
    <%= link_to "Add New Room", new_room_path, class: "btn btn-success btn" %>
  </div>
  <div class="row" id="rooms">
    <% @rooms.each do |room| %>
      <div class="col-md-3 mb-4 d-flex">
        <%= render room %>
      </div>
    <% end %>
  </div>
</div>
