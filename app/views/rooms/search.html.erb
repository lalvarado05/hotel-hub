<% content_for :title, "Rooms" %>
<!-- Search and Filter Section -->
<div class="container">
  <div class="my-4">
    <%= form_with url: rooms_path, method: :get, local: true, class: "d-flex align-items-center justify-content-between" do |form| %>
      <div class="form-group mb-0 mr-2">
        <%= form.label :check_in_date, "Check-in Date", class: "sr-only" %>
        <%= form.date_field :check_in_date, class: "form-control", placeholder: "Check-in Date" %>
      </div>
      <div class="form-group mb-0 mr-2">
        <%= form.label :check_out_date, "Check-out Date", class: "sr-only" %>
        <%= form.date_field :check_out_date, class: "form-control", placeholder: "Check-out Date" %>
      </div>
      <div class="form-group mb-0 mr-2">
        <%= form.label :guest_amount, "Number of Guests", class: "sr-only" %>
        <%= form.number_field :guest_amount, class: "form-control", min: 1, placeholder: "Guests" %>
      </div>
      <div class="form-group mb-0">
        <br>
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <!-- Left Column: Filter Placeholder -->
    <div class="col-md-3">
      <h3>Filters</h3>
      <!-- Placeholder for future filter implementation -->
      <div class="filter-placeholder">
        <!-- Filter options will go here -->
        <div class="filter-options">
          <h4>Filter Options</h4>
          <!-- Filter options go here -->
          <label for="room_type">Room Type:</label>
          <select name="room_type" id="room_type">
            <option value="">All</option>
            <option value="single">Single</option>
            <option value="double">Double</option>
            <option value="suite">Suite</option>
          </select>
          <label for="price_range">Price Range:</label>
          <select name="price_range" id="price_range">
            <option value="">All</option>
            <option value="0-50">$0 - $50</option>
            <option value="51-100">$51 - $100</option>
            <option value="101-150">$101 - $150</option>
            <option value="151-200">$151 - $200</option>
          </select>
          <label for="amenities">Amenities:</label>
          <div class="amenities">
            <input type="checkbox" name="amenities" value="wifi" id="wifi">
            <label for="wifi">WiFi</label>
            <input type="checkbox" name="amenities" value="pool" id="pool">
            <label for="pool">Pool</label>
            <input type="checkbox" name="amenities" value="gym" id="gym">
            <label for="gym">Gym</label>
          </div>
          <input type="submit" value="Apply Filters" class="btn btn-primary">
        </div>
      </div>
    </div>
    <!-- Right Column: Rooms List -->
    <div class="col-md-9">
      <!-- Check-in, Check-out, Guest Amount Form -->
      <!-- Rooms List -->
      <div id="rooms">
        <% @rooms.each do |room| %>
          <div class="room-card mb-3 p-3 border">
            <%= render room %>
            <p>
              <%= link_to "Show this room", room, class: "btn btn-secondary" %>
            </p>
          </div>
        <% end %>
      </div>
      <%= link_to "New room", new_room_path, class: "btn btn-success" %>
    </div>
  </div>
  <%= month_calendar do |date| %>
    <div class="day">
      <%= link_to date.day, '#', class: 'day-link' %>
    </div>
  <% end %>
  <%= month_calendar do |date| %>
    <%= date %>
  <% end %>
</div>
