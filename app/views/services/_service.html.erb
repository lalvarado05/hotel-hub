<tr id="<%= dom_id(service) %>">
  <td><%= service.name %></td>
  <td><%= service.description %></td>
  <td>
    <div class="d-flex">
      <%= link_to "Edit", edit_service_path(service), class: "btn btn-secondary btn-sm me-2" %>
      <%= button_to "Delete", service, method: :delete, class: "btn btn-danger btn-sm", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </td>
</tr>