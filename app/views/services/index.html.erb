<% content_for :title, "Services" %>
<div class="my-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Services</h1>
    <%= link_to "New Service", new_service_path, class: "btn btn-success" %>
  </div>
  <div class="card shadow-sm p-4">
    <table class="table table-striped table-hover" data-controller="datatables">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
          <%= render partial: "service", locals: { service: service } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
